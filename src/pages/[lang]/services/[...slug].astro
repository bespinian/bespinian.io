---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import SEO from "../../../components/SEO.astro";
import StructuredData from "../../../components/StructuredData.astro";
import Title from "../../../components/Title.astro";
import CTA from "../../../components/CTA.astro";
import { languages } from "../../../i18n/ui";
import { useI18n } from "../../../i18n/utils";
import spaceship from "../../../assets/spaceship1.svg";

export async function getStaticPaths() {
  const allServices = await getCollection("services");

  return Object.keys(languages).flatMap((lang) => {
    const langService = allServices.find(({ id }) => id === lang);
    if (!langService) return [];

    return langService.data.map((service) => ({
      params: { slug: service.id, lang },
      props: { service },
    }));
  });
}

const { service } = Astro.props;

const { lang, translatePath, t } = useI18n(Astro.url);

const title = service.title;
const description = service.description;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
---

<Layout>
  <SEO slot="head" {title} {description} {lang} />
  <StructuredData
    slot="head"
    schema={{
      type: "Service",
      name: title,
      description,
      serviceType: "Professional Services",
      url: canonicalUrl,
      provider: {
        name: "bespinian",
        url: new URL("/", Astro.site).toString(),
      },
    }}
  />
  <Title {title} subtitle={description} {spaceship} />

  <main class="service-page">
    <article>
      <div class="container">
        <header class="service-header">
          <a href={translatePath("/#services")} class="back-link">
            ‚Üê Back to Services
          </a>
        </header>
      </div>

      <div class="service-content">
        <section class="container">
          <h2>{t("services.challenges")}</h2>
          <p>{service.challenges.description}</p>
          <ul>
            {
              service.challenges.list.map((item) => (
                <li>
                  <strong>{item.title}</strong>: {item.description}
                </li>
              ))
            }
          </ul>
        </section>

        <div class="bg-dark">
          <section class="container">
            <h2>{t("services.approach")}</h2>
            <p>{service.approach.description}</p>
            <ol>
              {
                service.approach.list.map((item) => (
                  <li>
                    <strong>{item.title}</strong>: {item.description}
                  </li>
                ))
              }
            </ol>
          </section>
        </div>

        <section class="container">
          <h2>{t("services.results")}</h2>
          <table>
            <thead>
              <tr>
                <th>{t("services.result")}</th>
                <th>{t("services.value")}</th>
              </tr>
            </thead>
            <tbody>
              {
                service.results.list.map((item) => (
                  <tr>
                    <td>{item.title}</td>
                    <td>{item.description}</td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </section>
      </div>
    </article>
  </main>

  <CTA service={title} />
</Layout>

<style>
  .service-page {
    padding: var(--spacing-lg) 0;
    min-height: calc(100vh - 400px);
  }

  .container {
    max-width: var(--content-wide-max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .bg-dark {
    padding-top: 1rem;
    padding-bottom: 4rem;
    background-color: var(--color-background-primary);
    color: var(--color-secondary);
  }

  .bg-dark h2 {
    color: var(--color-secondary);
  }

  .service-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    color: var(--color-primary);
    text-decoration: none;
    margin-bottom: var(--spacing-md);
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.2;
    margin: 0;
    color: var(--color-primary);
  }

  .service-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #333;
  }

  .service-content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .service-content :global(h2) {
    font-size: 2.5rem;
    margin: 3rem 0 1.5rem 0;
    color: var(--color-primary);
  }

  .service-content :global(h3) {
    font-size: 1.75rem;
    margin: 2rem 0 1rem 0;
    color: #333;
  }

  .service-content :global(ul),
  .service-content :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 2rem;
  }

  .service-content :global(li) {
    margin-bottom: 1rem;
  }

  .service-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 1rem;
  }

  .service-content :global(th),
  .service-content :global(td) {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #e0e0e0;
  }

  .service-content :global(th) {
    background: var(--color-background-tertiary);
    color: var(--color-primary);
    font-weight: 600;
    font-size: 1.125rem;
  }

  .service-content :global(td) {
    vertical-align: top;
  }

  .service-content :global(tbody tr:hover) {
    background: #f9f9f9;
  }

  .service-content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .service-content :global(a:hover) {
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .service-page {
      padding: var(--spacing-md) 0;
    }

    h1 {
      font-size: 2.5rem;
    }

    .service-content {
      font-size: 1rem;
    }

    .service-content :global(h2) {
      font-size: 2rem;
    }

    .service-content :global(h3) {
      font-size: 1.5rem;
    }

    .service-content :global(table) {
      font-size: 0.875rem;
    }

    .service-content :global(th),
    .service-content :global(td) {
      padding: 0.75rem;
    }
  }
</style>
