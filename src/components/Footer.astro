---
import bespinianWhite from "../assets/bespinian-white.svg";
import { useI18n } from "../i18n/utils";

const { t, translatePath } = useI18n(Astro.url);
---

<footer>
  <div class="container">
    <div class="column">
      <a href={translatePath("/")}>
        <img id="logo" src={bespinianWhite.src} alt="bespinian logo" />
      </a>
    </div>

    <div class="column">
      <a href="https://www.linkedin.com/company/19074419" target="_blank">
        LinkedIn
      </a>
      <a href="https://www.youtube.com/@bespinian-io" target="_blank">
        YouTube
      </a>
      <a href={translatePath("/imprint")}>{t("footer.imprint")}</a>
    </div>
  </div>

  <p>
    {
      t("footer.copyright").replace(
        "{year}",
        new Date().getFullYear().toString(),
      )
    }
  </p>
</footer>

<style>
  footer {
    padding: 2rem;
    padding-top: 4rem;
    background-color: var(--color-primary);
    color: var(--color-secondary);
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 3rem;
  }

  .column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  #logo {
    max-height: 2.5rem;
    margin-bottom: 4rem;
  }

  a {
    text-decoration: none;
    color: var(--color-secondary);
  }

  a:hover {
    color: var(--color-background-tertiary);
  }

  @media (min-width: 48rem) {
    .container {
      flex-direction: row;
    }
  }
</style>
