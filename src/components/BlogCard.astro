---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { formatDate } from "../lib/formatters";
import { useI18n } from "../i18n/utils";
import FlipCard from "./FlipCard.astro";

interface Props {
  id: string;
  title: string;
  description: string;
  author: string;
  pubDate: Date;
  tags: string[];
  image: ImageMetadata;
}
const { id, title, description, author, pubDate, tags, image } = Astro.props;

const { lang, translatePath } = useI18n(Astro.url);

const formattedDate = formatDate(pubDate, lang);
---

<a href={translatePath(`/blog/${id}`)}>
  <FlipCard>
    <div slot="front" class="front">
      <h3>{title}</h3>
      <p class="description">{description}</p>
      <div class="meta">
        <span class="author">{author}</span>
        <span class="separator">â€¢</span>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      <div class="tags">
        {tags.map((tag) => <span class="tag">{tag}</span>)}
      </div>
    </div>
    <div slot="back" class="back">
      {
        image ? (
          <Image src={image} alt={title} class="image" />
        ) : (
          <div class="placeholder">
            <p>
              Read about
              <br />"{title}"
            </p>
          </div>
        )
      }
    </div>

    <style>
      a {
        text-decoration: none;
      }

      .front {
        background-color: var(--color-secondary);
        flex-grow: 1;
        padding: 2rem;
        border-radius: 0.8rem;
        height: calc(100% - 4rem);
      }

      .back {
        height: 100%;
      }

      .placeholder {
        height: calc(100% - 4rem);
        padding: 2rem;
        border-radius: 0.8rem;
        font-size: 1.5rem;
        text-align: center;
        background-color: var(--color-primary);
        color: var(--color-secondary);
      }

      .placeholder p {
        margin-top: 4rem;
      }

      .image {
        width: 100%;
        height: 100%;
        border-radius: 0.8rem;
        object-fit: cover;
      }

      h3 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        line-height: 1.3;
        color: var(--color-primary);
      }

      .description {
        color: var(--color-text-dark);
        margin: 0 0 1rem 0;
        line-height: 1.6;
      }

      .meta {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--color-gray);
        margin-bottom: 1rem;
      }

      .separator {
        color: var(--color-text-light);
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 3rem;
      }

      .tag {
        background: var(--color-tag-bg);
        color: var(--color-gray);
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 500;
      }
    </style>
  </FlipCard></a
>
