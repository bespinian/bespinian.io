---
interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  noindex?: boolean;
  lang?: string;
}

const {
  title,
  description,
  image,
  imageAlt,
  article = false,
  publishedTime,
  modifiedTime,
  author,
  tags,
  noindex = false,
  lang = "en",
} = Astro.props;

// Get the canonical URL from the current page
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Default social image if none provided
const socialImage = image
  ? new URL(image, Astro.site).toString()
  : new URL("/og-default.jpg", Astro.site).toString();

// Full title with site name
const fullTitle = title.includes("bespinian") ? title : `${title} | bespinian`;

// Extract language from URL path
const pathParts = Astro.url.pathname.split("/").filter(Boolean);

// Supported languages
const languages = ["en", "de", "ch"];

// Generate alternate URLs for hreflang
const getAlternateUrl = (language: string) => {
  const pathWithoutLang = pathParts.slice(1).join("/");
  return new URL(
    `/${language}${pathWithoutLang ? "/" + pathWithoutLang : ""}`,
    Astro.site,
  ).toString();
};
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="description" content={description} />
<meta name="author" content="bespinian" />
<meta name="theme-color" content="#3273dc" />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Hreflang Tags for Internationalization -->
{
  languages.map((language) => (
    <link
      rel="alternate"
      hreflang={language === "ch" ? "de-CH" : language}
      href={getAlternateUrl(language)}
    />
  ))
}
<link rel="alternate" hreflang="x-default" href={getAlternateUrl("en")} />

<!-- Facebook Meta Tags -->
<meta property="og:url" content={canonicalURL} />
<meta property="og:type" content={article ? "article" : "website"} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImage} />
{imageAlt && <meta property="og:image:alt" content={imageAlt} />}
<meta
  property="og:locale"
  content={lang === "de" || lang === "ch" ? "de_DE" : "en_US"}
/>
<meta property="og:site_name" content="bespinian" />

{
  article && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
{
  article && modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )
}
{article && author && <meta property="article:author" content={author} />}
{
  article &&
    tags &&
    tags.map((tag) => <meta property="article:tag" content={tag} />)
}

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content="bespinian.io" />
<meta property="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={socialImage} />
{imageAlt && <meta name="twitter:image:alt" content={imageAlt} />}
