---
import FlipCard from "./FlipCard.astro";

interface Props {
  index: number;
  title: string;
  description: string;
}

const { index, title, description } = Astro.props;
---

<FlipCard>
  <div slot="front" class="body">
    <div class="index">
      <h3>{index}</h3>
    </div>
    <div class="bottom">
      <h3>{title}</h3>
    </div>
  </div>

  <div slot="back" class="body">
    <div class="back-title">
      <h3>{title}</h3>
    </div>
    <div class="bottom">
      <p class="description">{description}</p>
    </div>
  </div>
</FlipCard>

<style>
  .body {
    min-height: 26rem;
    padding: 2.5rem;
    border-radius: 0.8rem;
    background-color: var(--color-primary);
    color: var(--color-secondary);
  }

  h3 {
    margin: 0;
    font-size: 2rem;
  }

  .index {
    width: 2.5rem;
    padding: 1rem;
    text-align: center;
    border-radius: 99999px;
    background-color: var(--color-secondary);
    color: var(--color-primary);
  }

  .back-title {
    padding: 2rem 0;
  }

  .card-front .body {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-back .body {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .card-back .bottom {
    margin-top: 1rem;
    padding-top: 0;
  }

  .subtitle {
    font-size: 1.2rem;
  }

  .description {
    font-size: 1rem;
    line-height: 1.6;
  }

  .bottom {
    height: 2.2rem;
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 2rem;
  }
</style>
