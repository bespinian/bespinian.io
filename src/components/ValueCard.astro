---
interface Props {
  index: number;
  title: string;
  description: string;
}

const { index, title, description } = Astro.props;
---

<article class="card-container">
  <div class="card-inner">
    <div class="card-front">
      <div class="body">
        <div class="index">
          <h3>{index}</h3>
        </div>
        <div class="social-icons">
          <h3>{title}</h3>
        </div>
      </div>
    </div>

    <div class="card-back">
      <div class="body">
        <div class="back-title">
          <h3>{title}</h3>
        </div>
        <div class="social-icons">
          <p class="description">{description}</p>
        </div>
      </div>
    </div>
  </div>

  <style>
    .card-container {
      min-height: 20rem;
    }

    .card-inner {
      position: relative;
      width: 100%;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }

    .card-container:hover .card-inner {
      transform: rotateY(180deg);
    }

    .card-front,
    .card-back {
      width: 100%;
      min-height: 32rem;
      backface-visibility: hidden;
      background-color: var(--color-primary);
      color: var(--color-secondary);
      border-radius: 0.8rem;
    }

    .index {
      width: 3rem;
      text-align: center;
      padding: 1rem;
      border-radius: 99999px;
      background-color: var(--color-secondary);
      color: var(--color-primary);
    }

    .card-front {
      position: relative;
      display: flex;
      flex-direction: column;
    }

    .back-title {
      padding: 2rem 0;
    }

    .card-back {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      transform: rotateY(180deg);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    h3 {
      margin: 0;
      font-size: 2.5rem;
    }

    .body {
      padding: 2.5rem;
    }

    .card-front .body {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .card-back .body {
      height: 100%;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .card-back .social-icons {
      margin-top: 1rem;
      padding-top: 0;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .description {
      font-size: 1rem;
      line-height: 1.6;
    }

    .social-icons {
      height: 2.2rem;
      display: flex;
      gap: 0.5rem;
      margin-top: auto;
      padding-top: 2rem;
    }
  </style>
</article>
