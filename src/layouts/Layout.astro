---
import { Font } from "astro:assets";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { useI18n } from "../i18n/utils";
import "../styles/global.css";

const { lang } = useI18n(Astro.url);
---

<!doctype html>
<html {lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://scripts.simpleanalyticscdn.com" />
    <link rel="dns-prefetch" href="https://scripts.simpleanalyticscdn.com" />

    <Font cssVariable="--font-lato" preload />
    <!-- SEO and meta tags slot -->
    <slot name="head">
      <!-- Fallback title if no SEO component is provided -->
      <title>bespinian</title>
    </slot>
  </head>
  <body>
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />

    <script
      is:inline
      async
      src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-lato);
  }
</style>
